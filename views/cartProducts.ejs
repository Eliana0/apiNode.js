<%- include('./partials/header.ejs') %>

<% if (admin == false) {%>

    <h1>Cart</h1>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Stock</th>
            <th scope="col">Descripci√≥n</th>
            <th scope="col">Foto</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            
            <tr>
              <th scope="row"><%= product.id %></th>
              <td><%= product.title %></td>
              <td>$<%= product.price %></td>
              <td><%= product.stock %></td> 
              <td><img style="width: 100px" src=<%= product.thumbnail %>  alt=""></td>
              <% if (admin == true) {%>
              <td><a href="/api/productos/<%= product.id %>"><button class="btn btn-outline-primary">Editar</button></a>
                <a href="/api/productos/<%= product.id %>" class="btn btn-primary" data-method="delete">Eliminar</a>
      
                </td>
                <%   }else{ %>
                  <td>
                    <a href="/api/cart:id"><button class="btn btn-outline-primary" >Agregar</button>
                  </td>
                  <%   }; %>
                </tr>
                
          <%   }); %>
        </tbody>
      </table>
    
    <%   }; %>