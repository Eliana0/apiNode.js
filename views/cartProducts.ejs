<%- include('./partials/header.ejs') %>


    <h1>Cart</h1>
    <h3><%= user.nombre %></h3>
    <a href="/api/productos"><button class="btn btn-outline-primary">Ir a Tienda</button></a>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Foto</th>
          </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
            <tr>
              <th scope="row"><%= product.id %></th>
              <td><%= product.title %></td>
              <td>$<%= product.price %></td>
              <td><%= product.stock %></td> 
              <td><img style="width: 100px" src=<%= product.thumbnail %>  alt=""></td>
              <td><a href="/api/cart/<%= user._id %>/productos-delete/<%= product.id %>" class="btn btn-primary">Eliminar</a></td>
            </tr>
            <%   }); %>
        </tbody>
      </table>