<%- include('./partials/header.ejs') %>

<h1>Modificación de productos</h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Foto</th>
    </tr>
  </thead>
  <tbody>
    <tr>
<form action="/api/update-productos/<%= products.id %>">
<input type="hidden" name="_method" value="PUT">
  <td>
    <input type="text" value="<%= products.id %>" readonly name="id" id="id" aria-describedby="helpId" placeholder="Número de ID">  
  </td>

  <td>
    <%= products.title %>
    <br>
    <input type="text" name="title" id="title">
  </td>

  <td>
    $<%= products.price %>
    <br>
    <input type="number" name="price" id="price">
  </td>

  <td>
    <img style="width: 100px" src= <%= products.thumbnail %>  alt="">
    <br>
    <input type="text" name="thumbnail" id="thumbnail">
  </td>    

  <td><button type="submit" class="btn btn-outline-primary">Guardar</button></td>
</form>
  </tbody>
</table>